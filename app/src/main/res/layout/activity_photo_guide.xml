<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        tools:context="edu.sce.tom.physotrack.PhotoGuide">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/photo_guide_text"
            android:textSize="20sp" />

        <!-- Kiss Expression -->

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kiss Expression :\n"
            android:textColor="#0000FF"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"/>

        <ImageView
            android:layout_width="270dp"
            android:layout_height="250dp"
            android:background="@drawable/kiss_info"
            android:layout_gravity="center"
            android:contentDescription="kiss info picture"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\nSelf-portrait with a simple kiss.\n"
            android:textSize="20sp"/>

        <!-- Smile Expression -->

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Smile Expression :\n"
            android:textColor="#0000FF"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"/>

        <ImageView
            android:layout_width="270dp"
            android:layout_height="250dp"
            android:background="@drawable/smile_info"
            android:layout_gravity="center"
            android:contentDescription="smile info picture"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\nSelf-portrait with a simple smile.\n"
            android:textSize="20sp"/>


        <!-- eyes close Expression -->

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Eyes close Expression :\n"
            android:textColor="#0000FF"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"/>

        <ImageView
            android:layout_width="270dp"
            android:layout_height="250dp"
            android:background="@drawable/eyeclose_info"
            android:layout_gravity="center"
            android:contentDescription="eyes close info picture"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\nA self-portrait in which you close your eyes.\n"
            android:textSize="20sp"/>

        <!-- Blankly Expression -->

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Blankly Expression :\n"
            android:textColor="#0000FF"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"/>

        <ImageView
            android:layout_width="270dp"
            android:layout_height="250dp"
            android:background="@drawable/blankly_info"
            android:layout_gravity="center"
            android:contentDescription="Blankly info picture"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\nSelf-portrait without expression, a normal face.\n"
            android:textSize="20sp"/>


        <!-- Rabbit Expression -->

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rabbit Expression :\n"
            android:textColor="#0000FF"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"/>

        <ImageView
            android:layout_width="270dp"
            android:layout_height="250dp"
            android:background="@drawable/rabbit_info"
            android:layout_gravity="center"
            android:contentDescription="Rabbit info picture"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\nSelf-portrait in the shape of a rabbit.\n"
            android:textSize="20sp"/>

        <!-- Eye Brow Lift Expression -->

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Eye Brow Lift Expression :\n"
            android:textColor="#0000FF"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"/>

        <ImageView
            android:layout_width="270dp"
            android:layout_height="250dp"
            android:background="@drawable/browlift_info"
            android:layout_gravity="center"
            android:contentDescription="Eye Brow Lift info picture"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\nSelf-portrait with eyebrow lift.\n"
            android:textSize="20sp"/>



    </LinearLayout>

</ScrollView>