<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5d6ea6"
    android:backgroundTint="#d5dfe9"
    android:backgroundTintMode="src_in"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.sce.tom.physotrack.MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/btn_new_photo"
            android:layout_width="match_parent"
            android:layout_height="52dp"


            android:background="@drawable/buttonshape"
            android:onClick="btn_new_photo_On_click"
            android:shadowColor="#2328A8"
            android:shadowDx="-0"
            android:shadowDy="0"
            android:shadowRadius="0"
            android:text="NEW PHOTO"
            android:textColor="#D3DCE0"
            android:textSize="20sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20px" />

        <Button
            android:id="@+id/btn_personal_detail"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_alignBaseline="@+id/btn_new_photo"
            android:layout_alignBottom="@+id/btn_new_photo"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="1"
            android:background="@drawable/buttonshape"
            android:onClick="btn_personal_details_On_click"
            android:shadowColor="#2328A8"
            android:shadowDx="-0"
            android:shadowDy="0"
            android:shadowRadius="0"

            android:text="personal detail"
            android:textColor="#D3DCE0"
            android:textSize="20sp" />

        <Space
            android:layout_width="20px"
            android:layout_height="20px" />

        <Button
            android:id="@+id/btn_previous_analysis"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/linearLayout"
            android:layout_weight="1"
            android:background="@drawable/buttonshape"
            android:onClick="btn_previous_analysis_On_click"
            android:shadowColor="#2328A8"
            android:shadowDx="-0"
            android:shadowDy="0"
            android:shadowRadius="0"
            android:text="Previous analysis"
            android:textColor="#D3DCE0"
            android:textSize="20sp" />

        <Space
            android:layout_width="20px"
            android:layout_height="20px" />

        <Button
            android:id="@+id/btn_medical_information"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="66dp"
            android:layout_weight="1"
            android:background="@drawable/buttonshape"
            android:onClick="btn_medical_information_On_click"
            android:shadowColor="#2328A8"
            android:shadowDx="-0"
            android:shadowDy="0"
            android:shadowRadius="0"
            android:text="medical information"
            android:textColor="#D3DCE0"
            android:textSize="20sp" />


    </LinearLayout>

</RelativeLayout>



