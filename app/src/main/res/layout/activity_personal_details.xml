<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5d6ea6"
    android:backgroundTint="#d5dfe9"
    android:backgroundTintMode="src_in"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.sce.tom.physotrack.PersonalDetail">

    <LinearLayout
        android:layout_width="336dp"
        android:layout_height="463dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp"
        android:weightSum="1">

        <EditText
            android:id="@+id/txt_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="insert_user_name" />

        <EditText
            android:id="@+id/txt_therapist_mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:hint="insert_therapist_mail" />

        <EditText
            android:id="@+id/txt_side_select"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="in_order_for_us_to_provide_you_with_a_service_you_must_enter_the_damaged_side"
            android:layout_weight="0.39" />

        <RadioGroup
            android:id="@+id/radioSide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:gravity="left">


            <RadioButton
                android:id="@+id/radio_left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="left_side"
                />

            <RadioButton
                android:id="@+id/radio_right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="right_side"
                />

        </RadioGroup>


        <Button
            android:id="@+id/btn_PD_submit"
            android:layout_width="match_parent"
            android:layout_height="30dp"

            android:background="@drawable/buttonshape"
            android:shadowColor="#2328A8"
            android:shadowDx="-0"
            android:shadowDy="0"
            android:shadowRadius="0"
            android:text="submit"
            android:textColor="#D3DCE0"
            android:textSize="20sp"
            android:onClick="SubmitClicked"

            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>