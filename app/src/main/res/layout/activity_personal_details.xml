<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:layoutDirection="ltr"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_personal_detail"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_weight="0.10"
            android:gravity="fill_vertical|center_horizontal"
            android:text="@string/personal_detail_button"
            android:textColorLink="@android:color/holo_blue_dark"
            android:textSize="24sp"
            android:textStyle="normal|bold" />

        <EditText
            android:id="@+id/txt_user_name"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_weight="0.23"
            android:ems="10"
            android:gravity="bottom|center"
            android:hint="@string/user_name"
            android:inputType="textPersonName"
            android:textColor="@color/colorAccent"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/txt_therapist_mail"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_weight="0.23"
            android:ems="10"
            android:gravity="bottom|center"
            android:hint="@string/therapist_mail"
            android:inputType="textPersonName"
            android:textColor="@color/colorAccent"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/treated_side"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.20"
            android:ems="10"
            android:gravity="start|center"
            android:text="@string/txt_personal_details_username"
            android:textSize="20sp" />

        <RadioGroup
            android:id="@+id/radioSide"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="0.4">

            <RadioButton
                android:id="@+id/radio_left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/left_side_radio_button"
                android:textSize="18sp"
                />

            <RadioButton
                android:id="@+id/radio_right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/right_side_radio_button"
                android:textSize="18sp"/>
        </RadioGroup>

        <Button
            android:id="@+id/btn_PD_submit"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/buttonshape"
            android:gravity="center"
            android:onClick="SubmitClicked"
            android:shadowColor="#2328A8"
            android:text="@string/submit_Personal_Details"
            android:textColor="#D3DCE0" />

    </LinearLayout>

</LinearLayout>
